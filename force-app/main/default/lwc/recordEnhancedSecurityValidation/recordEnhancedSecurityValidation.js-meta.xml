<?xml version="1.0"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>60.0</apiVersion>
	<isExposed>true</isExposed>
    <masterLabel>Enhance Security Record Validation</masterLabel>
    <description>This component will be used to check if an unauthorized user is viewing a record, and if so, it will redirect them to the record list page for enhanced security.</description>
	<targets>
        <target>lightning__RecordPage</target>
    </targets>
     <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Account</object>
                <object>Case</object>
            </objects>
        </targetConfig>
    </targetConfigs>  
</LightningComponentBundle>